#!/usr/bin/env php
<?php

declare(strict_types=1);

require __DIR__ . '/../vendor/autoload.php';

use App\{
    Command\Benchmark\BenchmarkInitCommand,
    Command\Benchmark\BenchmarkValidateCommand,
    Command\Composer\ComposerUpdateCommand,
    Command\Configure\Composer\ConfigureComposerJsonCommand,
    Command\Configure\ConfigureAllCommand,
    Command\Configure\ConfigureCircleCiCommand,
    Command\Configure\ConfigureEntryPointCommand,
    Command\Configure\ConfigureReadmeCommand,
    Command\Configure\PhpBenchmarks\ConfigurePhpBenchmarksConfigurationClassCommand,
    Command\Configure\PhpBenchmarks\ConfigurePhpBenchmarksConfigurationClassGetSourceCodeUrlsCommand,
    Command\Configure\PhpBenchmarks\ConfigurePhpBenchmarksInitBenchmarkCommand,
    Command\Configure\PhpBenchmarks\ConfigurePhpBenchmarksResponseBodyCommand,
    Command\Configure\PhpBenchmarks\ConfigurePhpBenchmarksVhostCommand,
    Command\DefaultCommand,
    Command\PhpVersion\PhpVersionCliDefineCommand,
    Command\Validate\Composer\ValidateComposerJsonCommand,
    Command\Validate\Composer\ValidateComposerLockCommand,
    Command\Validate\PhpBenchmarks\ValidatePhpBenchmarksComposerLockCommand,
    Command\Validate\PhpBenchmarks\ValidatePhpBenchmarksConfigurationClassCommand,
    Command\Validate\PhpBenchmarks\ValidatePhpBenchmarksConfigurationClassGetSourceCodeUrlsCommand,
    Command\Validate\PhpBenchmarks\ValidatePhpBenchmarksInitBenchmarkCommand,
    Command\Validate\PhpBenchmarks\ValidatePhpBenchmarksResponseBodyCommand,
    Command\Validate\PhpBenchmarks\ValidatePhpBenchmarksVhostCommand,
    Command\Validate\ValidateAllCommand,
    Command\Validate\ValidateBranchNameCommand,
    Command\Validate\ValidateEntryPointCommand,
    Command\Validate\ValidateReadmeCommand,
    Command\Vhost\VhostCreateCommand
};
use Symfony\Component\Console\Application;

$application = new Application();

$application->add(new BenchmarkInitCommand());
$application->add(new BenchmarkValidateCommand());

$application->add(new ComposerUpdateCommand());

$application->add(new ConfigureAllCommand());
$application->add(new ConfigureComposerJsonCommand());
$application->add(new ConfigureCircleCiCommand());
$application->add(new ConfigureEntryPointCommand());
$application->add(new ConfigureReadmeCommand());
$application->add(new ConfigurePhpBenchmarksConfigurationClassCommand());
$application->add(new ConfigurePhpBenchmarksConfigurationClassGetSourceCodeUrlsCommand());
$application->add(new ConfigurePhpBenchmarksInitBenchmarkCommand());
$application->add(new ConfigurePhpBenchmarksResponseBodyCommand());
$application->add(new ConfigurePhpBenchmarksVhostCommand());

$application->add(new DefaultCommand());

$application->add(new PhpVersionCliDefineCommand());

$application->add(new ValidateAllCommand());
$application->add(new ValidateBranchNameCommand());
$application->add(new ValidateComposerJsonCommand());
$application->add(new ValidateComposerLockCommand());
$application->add(new ValidateEntryPointCommand());
$application->add(new ValidateReadmeCommand());
$application->add(new ValidatePhpBenchmarksComposerLockCommand());
$application->add(new ValidatePhpBenchmarksConfigurationClassCommand());
$application->add(new ValidatePhpBenchmarksConfigurationClassGetSourceCodeUrlsCommand());
$application->add(new ValidatePhpBenchmarksInitBenchmarkCommand());
$application->add(new ValidatePhpBenchmarksResponseBodyCommand());
$application->add(new ValidatePhpBenchmarksVhostCommand());

$application->add(new VhostCreateCommand());

$application->run();
