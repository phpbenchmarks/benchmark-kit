version: '2.1'

jobs:
    ValidateBenchmark:
        docker:
            - image: phpbenchmarks/benchmark-kit:4
        working_directory: /var/www/benchmark
        steps:
            - checkout
            - run:
                name: /var/entrypoint.sh
                command: /var/entrypoint.sh --nginx-as-service
            - run:
                name: "validate:benchmark"
                command: "/var/benchmark-kit/bin/console validate:benchmark -vvv"

workflows:
    version: '2.1'
    BenchmarkKit:
        jobs:
            - ValidateBenchmark
